<idea-plugin version="2">
  <id>org.macchiatow.plugin.tomato</id>
  <name>Togrul Mageramov</name>
  <version>1.0.1</version>
  <vendor email="cmeisters@gmail.com" url="http://www.macchiatow.org">Macchiatow</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="120"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
    on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
      <component>
          <implementation-class>org.macchiatow.tomato.ui.Initialization</implementation-class>
      </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <group id="TomatoGroup" text="Tomato" popup="true" icon="Tomato-Icon.png" >
          <action id="StaartAction" class="org.macchiatow.tomato.ui.StartAction" text="Start"/>
          <action id="Pause" class="org.macchiatow.tomato.ui.PauseAction" text="Pause"/>
          <action id="ShortBreak" class="org.macchiatow.tomato.ui.ShortBreakAction" text="ShortBreakAction"/>
          <action id="LongBreak" class="org.macchiatow.tomato.ui.LongBreakAction" text="LongBreakAction"/>
          <add-to-group group-id="ToolsMenu" anchor="last"/>
      </group>

  </actions>

</idea-plugin>